<%#= render :partial => 'spree/admin/shared/configuration_menu' %>
<%#= render :partial => 'spree/admin/shared/promotions_group_sub_menu' if @user.nil?%>

<h1><%=t("admin.user.new_store_credit")%></h1>

<%= render 'spree/shared/error_messages', :target => @store_credit %>

<%= form_for(:store_credit, :url => admin_user_store_credits_url(params[:user_id])) do |f| %>
  <%= f.hidden_field :user_id, :value => params[:user_id]%>
  <%= render :partial => "form", :locals => { :f => f } %>
  <%= render :partial => "spree/admin/shared/new_resource_links" %>
<% end %>

<%= render :partial => 'spree/admin/users/user_tabs', :locals => { :user => @user} unless @user.nil? %>
